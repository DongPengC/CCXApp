<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/appback2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_marginLeft="140dp"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/add_message_image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.0dip"
        android:background="#CCCCCC" />
    <Button
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:id="@+id/add_message_image_btn"
        android:text="点击更改头像"
        android:layout_marginTop="1dp"
        android:textColor="#8B7D7b"
        android:background="@android:color/transparent"
        android:layout_below="@+id/add_message_image"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:text="用户名"
        android:textSize="17dp"
        android:layout_below="@+id/add_message_image_btn"/>

    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/message_userName"
        android:background="@null"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/add_message_image_btn"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#CCCCCC"
        android:layout_below="@+id/message_userName"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="9dp"
        android:text="昵称"
        android:textSize="17dp"
        android:layout_below="@+id/message_userName"
        android:id="@+id/textView" />
    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/message_nickname"
        android:layout_marginLeft="100dp"
        android:background="@null"
        android:layout_below="@+id/message_userName"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC"
        android:layout_below="@id/message_nickname"/>



    <TextView
        android:layout_height="23dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:textSize="17dp"
        android:focusable="false"
        android:id="@+id/message_sex2"
        android:text="性别"
        android:layout_centerVertical="true"
        android:layout_below="@+id/message_nickname"/>
    <RadioGroup
        android:layout_marginTop="15dp"
        android:id="@+id/message_sex"
        android:layout_below="@+id/message_nickname"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView"
        android:weightSum="1">
        <RadioButton
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:id="@+id/male"
            android:text="男"           android:checked="true"
            android:layout_marginLeft="90dp"/>

        <RadioButton
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:id="@+id/female"
            android:text="女"
            android:layout_weight="0.09" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC"
        android:layout_below="@id/message_sex"
        android:layout_marginTop="1dp"/>

    <!--TextView
        android:id="@+id/message_birthday2"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="生日"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:textSize="17dp"
        android:focusable="false"
        android:layout_below="@+id/message_sex"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/time_button"
        android:text="1991-01-01"
        android:textColor="#8B7D7b"
        android:background="@android:color/transparent"

        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@+id/message_sex"
        android:layout_marginLeft="100dp"
        android:textSize="16dp"
        android:layout_marginTop="17dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC"
        android:layout_below="@id/time_button"
        android:layout_marginTop="1dp"/-->

    <TextView
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:text="地区"
        android:id="@+id/message_address2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:textSize="17dp"
        android:layout_below="@+id/message_sex"/>

    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/message_address"
        android:layout_marginLeft="100dp"
        android:background="@null"
        android:layout_below="@+id/message_sex"
        android:text="北京"/>
    <!--Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/province"
        android:layout_below="@+id/time_button"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/province"
        android:id="@+id/city"
        android:layout_below="@+id/time_button"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="13dp"
        /-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC"
        android:layout_below="@id/message_address"
        android:layout_marginTop="1dp"/>

    <TextView
        android:layout_height="50dp"
        android:layout_width="match_parent"

        android:text="个性签名"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:textSize="17dp"
        android:layout_below="@+id/message_address"/>
    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/message_explain"
        android:background="@null"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/message_address"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC"
        android:layout_below="@id/message_explain"
        android:layout_marginTop="1dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/add_message_btn"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:background="@drawable/button_color"
        android:text="提交信息"
        android:layout_marginTop="450dp"/>

</RelativeLayout>