<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/titleLayout">

        <ImageView
            android:id="@+id/back"
            android:src="@drawable/backimage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_title"
            android:text="   子女登陆"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/titleLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/accountLayout"
        android:layout_below="@+id/logo">

        <ImageView
            android:id="@+id/act"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="账号"
            android:textSize="20sp"
            android:id="@+id/act2"
            android:layout_weight="1" />

        <EditText
            android:inputType="number"
            android:hint="请输入手机号"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/psdLayout"
        android:layout_below="@+id/accountLayout">

        <ImageView
            android:id="@+id/psd"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="密码"
            android:textSize="20sp"
            android:layout_weight="1"
            android:id="@+id/psd2" />

        <EditText
            android:inputType="number"
            android:hint="请输入密码"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <Button
        android:id="@+id/signup"
        android:onClick="sign up"
        android:text="登陆"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/psdLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tagLayout"
        android:layout_below="@+id/signup">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:text="记住密码"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/below"
            android:text="忘记密码？"
            android:textSize="20sp"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lastLayout"
        android:layout_below="@+id/tagLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                还没有账号？"
        android:textSize="20sp"
        android:id="@+id/text" />

    <Button
        android:id="@+id/signup2"
        android:text="注册"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>







