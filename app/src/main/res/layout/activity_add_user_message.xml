<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/appback2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/add_message_image"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/add_message_image_btn"
        android:text="点击更改头像"
        android:textColor="#8B7D7b"
        android:layout_gravity="center"
     />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="17dp" />

        <EditText
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:background="@null"
            android:id="@+id/message_userName"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#CCCCCC"
     />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="17dp"
            android:id="@+id/textView"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/message_nickname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="57dp"
            android:background="@null" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_sex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.5dp"
            android:text="性别"
            android:textSize="17dp" />

        <RadioGroup
            android:id="@+id/message_sex"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="57dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginTop="13dp"
                android:text="男" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/message_birthday2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:textSize="17dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="57dp"
            android:id="@+id/time_button"
            android:text="1991-01-01"
            android:textColor="#8B7D7b"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="地区"
            android:id="@+id/message_address2"
            android:textSize="17dp"
            />

        <EditText
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@+id/message_address"
            android:layout_marginLeft="57dp"
            android:background="@null"
            android:text="北京"/>
        </LinearLayout>


    <!--Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/province"
        android:layout_below="@+id/time_button"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/province"
        android:id="@+id/city"
        android:layout_below="@+id/time_button"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="13dp"
        /-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

    <TextView
        android:layout_height="50dp"
        android:layout_width="match_parent"

        android:text="个性签名"

        android:textSize="17dp"
        />
    <EditText
        android:layout_height="50dp"
        android:layout_marginLeft="23dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:id="@+id/message_explain"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC"
/>

    <Button
        android:id="@+id/add_message_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/button_color"
        android:text="提交信息"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>