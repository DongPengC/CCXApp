<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/biz_news_local_weather_bg_big"
    android:layout_height="fill_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
    <ImageView
        android:id="@+id/profile_image"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/profile"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/myName"
        android:layout_height="28.0dip"
        android:layout_width="match_parent"
        android:paddingLeft="15.0dip"
        android:textSize="14.0sp"
        android:textColor="@color/white"
        android:text="用户1"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewRing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5.0dip"
            android:src="@drawable/ring" />
    <TextView
        android:id="@+id/tvMyFavorite"
        android:layout_height="50.0dip"
        android:layout_width="match_parent"
        android:paddingLeft="5.0dip"
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:text="设置提醒"
        android:gravity="center_vertical"
        android:paddingRight="10.0dip"
        android:drawablePadding="1.0dip"
        android:clickable="true"/>
        </LinearLayout>
    <View
        android:background="@drawable/biz_pc_account_line"
        android:layout_height="2.0dip"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewFr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5.0dip"
            android:src="@drawable/myfriend" />
    <TextView
        android:id="@+id/tvMyFriend"
        android:layout_height="50.0dip"
        android:layout_width="match_parent"
        android:paddingLeft="5.0dip"
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:text="我的好友"
        android:gravity="center_vertical"
        android:paddingRight="10.0dip"
        android:drawablePadding="1.0dip"
        android:clickable="true"/>
        </LinearLayout>
    <View
        android:background="@drawable/biz_pc_account_line"
        android:layout_height="2.0dip"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5.0dip"
            android:src="@drawable/settings" />

        <TextView
            android:id="@+id/tvRing"
            android:layout_height="50.0dip"
            android:layout_width="match_parent"
            android:paddingLeft="5.0dip"
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:text="设置"
            android:gravity="center_vertical"
            android:paddingRight="10.0dip"
            android:drawablePadding="1.0dip"
            /></LinearLayout>
    <View
        android:background="@drawable/biz_pc_account_line"
        android:layout_height="2.0dip"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <TextView
            android:id="@+id/loginout"
            android:layout_height="50.0dip"
            android:layout_width="match_parent"
            android:paddingLeft="5.0dip"
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:text="退出登录"
            android:gravity="center_vertical"
            android:paddingRight="10.0dip"
            android:drawablePadding="1.0dip"
            /></LinearLayout>
    <View
        android:background="@drawable/biz_pc_account_line"
        android:layout_height="2.0dip"
        android:layout_width="match_parent"/>
</LinearLayout>
