<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/grass"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:alpha="1"
        android:src="@mipmap/g" />

    <EditText
        android:id="@+id/name_need_search"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_below="@+id/grass"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape"
        android:hint="请输入用户名"

        android:padding="10px"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_search_new_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/showNewFriendsAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Search_New_Friend"
            android:layout_width="match_parent"
            android:layout_height="80.0dip"
            android:paddingTop="35dp"
            android:clickable="true"
            android:text="搜索结果"
            android:drawablePadding="1.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="35.0dip"
            android:paddingRight="10.0dip"
            android:textColor="#666666"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            android:background="#CCCCCC" />

        <ListView
            android:id="@+id/all_new_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">
        </ListView>
    </LinearLayout>

</LinearLayout>